@page
@model RegisterModel
@using models

@{
    ViewData["Title"] = "Register";
}

<div class="content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-md-8 offset-md-2">

                <!-- Register Content -->
                <div class="account-content">
                    <div class="row align-items-center justify-content-center">
                        <div class="col-md-7 col-lg-6 login-left">
                            <img src="~/images/login-banner.png" class="img-fluid" alt="Doccure Register">
                        </div>
                        <div class="col-md-12 col-lg-6 login-right">
                            <div class="login-header">
                                <h3>Patient Register</h3>
                            </div>

                            <!-- Register Form -->
                            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                                <div class="form-group form-focus">
                                    <input asp-for="Input.FirstName" class="form-control floating" autocomplete="username" aria-required="true" />
                                    <label asp-for="Input.FirstName" class="focus-label">First Name</label>
                                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                                </div>
                                <div class="form-group form-focus">
                                    <input asp-for="Input.LastName" class="form-control floating" autocomplete="username" aria-required="true" />
                                    <label asp-for="Input.LastName" class="focus-label">Last Name</label>
                                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                                </div>
                                <div class="form-group form-focus">
                                    <input asp-for="Input.Email" class="form-control floating" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                    <label asp-for="Input.Email" class="focus-label">Email</label>
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                <div class="form-group form-focus">
                                    <select asp-for="Input.Gender" class="form-control floating" aria-required="true" asp-items="@Html.GetEnumSelectList<models.gender>()"></select>
                                    <label asp-for="Input.Gender" class="focus-label">Gender</label>
                                    <span asp-validation-for="Input.Gender" class="text-danger"></span>
                                </div>

                                <div class="form-group form-focus">
                                    <input asp-for="Input.PhoneNumber" class="form-control floating" autocomplete="username" aria-required="true" placeholder="01011111111" />
                                    <label asp-for="Input.PhoneNumber" class="focus-label">Phone Number</label>
                                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                                </div>
                                <div class="form-group form-focus">
                                    <input asp-for="Input.Password" class="form-control floating" autocomplete="new-password" aria-required="true" placeholder="password" />
                                    <label asp-for="Input.Password" class="focus-label">Password</label>
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                                <div class="form-group form-focus">
                                    <input asp-for="Input.ConfirmPassword" class="form-control floating" autocomplete="new-password" aria-required="true" placeholder="password" />
                                    <label asp-for="Input.ConfirmPassword" class="focus-label">Confirm Password</label>
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>
                                <div class="text-right">
                                    <a class="forgot-link" asp-area="Identity" asp-page="/Account/Login">Already have an account?</a>
                                </div>
                                <button id="registerSubmit" type="submit" class="btn btn-primary btn-block btn-lg login-btn">Register</button>
                                <div class="login-or">
                                    <span class="or-line"></span>
                                    <span class="span-or">or</span>
                                </div>
                                <div class="row form-row social-login">
                                    @{
                                        if ((Model.ExternalLogins?.Count ?? 0) != 0)
                                        {
                                            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                                <div>
                                                    <p>
                                                        @foreach (var provider in Model.ExternalLogins!)
                                                        {
                                                            <div class="col-6">
                                                                <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                                            </div>
                                                        }
                                                    </p>
                                                </div>
                                            </form>
                                        }
                                    }
                                </div>
                            </form>
                            <!-- /Register Form -->

                        </div>
                    </div>
                </div>
                <!-- /Register Content -->

            </div>
        </div>

    </div>

</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
