@model models.Patient
@using models;
@{
	ViewData["Title"] = "Edit";
}
<div class="row justify-content-around">
	<div class="col-7 d-flex">
		<div class="card flex-fill">
			<div class="card-header">
				<h4 class="card-title">Personal Info</h4>
			</div>
			<div class="card-body">
				<form asp-action="Edit" enctype="multipart/form-data">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<input type="hidden" asp-for="ID" />
					<div class="form-group row">
						<label asp-for="user.FirstName" class="col-lg-3 col-form-label"></label>
						<div class="col-lg-9">
							<input asp-for="user.FirstName" class="form-control" />
							<span asp-validation-for="user.FirstName" class="text-danger"></span>
						</div>
					</div>
					<div class="form-group row">
						<label asp-for="user.LastName" class="col-lg-3 col-form-label"></label>
						<div class="col-lg-9">
							<input asp-for="user.LastName" class="form-control" />
							<span asp-validation-for="user.LastName" class="text-danger"></span>
						</div>
					</div>
					<div class="form-group row">
						<label asp-for="user.Gender" class="col-lg-3 col-form-label"></label>
						<div class="col-lg-9">
							<select asp-for="user.Gender" class="form-control" asp-items="Html.GetEnumSelectList<models.gender>()"></select>
							<span asp-validation-for="user.Gender" class="text-danger"></span>
						</div>
					</div>
					<div class="form-group row">
						<label asp-for="user.PhoneNumber" class="col-lg-3 col-form-label"></label>
						<div class="col-lg-9">
							<input asp-for="user.PhoneNumber" class="form-control" />
							<span asp-validation-for="user.PhoneNumber" class="text-danger"></span>
						</div>
					</div>
					<div class="text-right">
						<input type="submit" class="btn btn-primary" value="Edit" />
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
