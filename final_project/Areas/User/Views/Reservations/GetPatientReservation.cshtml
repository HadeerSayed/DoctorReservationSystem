@model IEnumerable<models.Appointment>

@{
    ViewData["Title"] = "GetPatientReservation";
}

<div class="page-header">
    <div class="row">
        <div class="col">
            <h3 class="page-title">Reservations</h3>
            <ul class="breadcrumb">
                <li class="breadcrumb-item">Dashboard</li>
            </ul>
        </div>
    </div>
</div>
<div class="row m-5">
    @foreach (var item in Model) {

    <div class="col-12 col-md-6 col-lg-4 d-flex">
        <div class="card flex-fill">
            <div class="card-header">
                <h5 class="card-title mb-0">@Html.DisplayFor(modelItem => item.Doctor.user.FirstName) @Html.DisplayFor(modelItem => item.Doctor.user.LastName)</h5>
            </div>
            <div class="card-body">
                <p class="card-text">
                        @Html.DisplayFor(modelItem => item.Date)<br />
                        @Html.DisplayFor(modelItem => item.Time)<br />
                        @Html.DisplayFor(modelItem => item.State)<br />
                </p>
                <a asp-action="ModifyReservation" asp-controller="Reservations" asp-route-appointment="@item.ID" class="btn btn-success">Change</a>
                <a asp-action="CancelReservation" asp-controller="Reservations" asp-route-appointment="@item.ID" class="btn btn-danger">Cancel</a>
            </div>
        </div>
    </div>
    }
    @if (Model.Count() == 0)
    {
        <p class="alert alert-light w-50 m-auto">No Reservations</p>
    }
</div>
